<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="#F5F5F5"  
    tools:context=".MainMenuActivity">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú Principal"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"  
        android:layout_marginBottom="48dp" />   

    <!-- Contenedor para los botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- Botón 1: Seleccionar Calle -->
        <Button
            android:id="@+id/btnSeleccionarCalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Calle"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#3F51B5" />  <!-- Color directo -->

        <!-- Botón 2: Seleccionar por Fecha -->
        <Button
            android:id="@+id/btnSeleccionarFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar por Fecha"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#4CAF50" />  <!-- Color directo -->

        <!-- Botón 3: Mostrar datos PL1 -->
        <Button
            android:id="@+id/btnMostrarDatosPL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar datos PL1"
            android:textSize="18sp"
            android:padding="16dp"
            android:backgroundTint="#9E9E9E" />  <!-- Color directo -->

    </LinearLayout>

    <!-- Mensaje informativo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona una opción"
        android:textSize="14sp"
        android:textColor="#757575"  
        android:layout_marginTop="32dp" />

</LinearLayout>