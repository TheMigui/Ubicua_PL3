<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_background">

    <!-- Fecha y hora -->
    <TextView
        android:id="@+id/tvFechaHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2024-06-04 12:12:00"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <!-- Estados separados para coches y peatones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvEstadoCoches"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Coches: VERDE"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/estado_background"/>

        <TextView
            android:id="@+id/tvEstadoPeatones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Peatones: ROJO"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/estado_background"/>

    </LinearLayout>

    <!-- Indicador de peatón esperando -->
    <TextView
        android:id="@+id/tvEsperando"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CON PEATÓN"
        android:textSize="13sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="6dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/estado_background"/>

</LinearLayout>